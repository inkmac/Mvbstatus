{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/api/**/*",
    "src/preload/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@main/*": ["src/main/*"]
    },
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}
